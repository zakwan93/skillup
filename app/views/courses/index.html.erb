<h1>
    Courses:
    <%= @courses.count %>
</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>User</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @courses.each do |course| %>
        <tr>
            <td>
                <%= course.title %>
            </td>
            <td>
                <%= course.description %>
            </td>
            <td>
                <%= course.user.email %>
            </td>
            <td>
                <%= link_to 'Show', course %>
            </td>
            <td>
                <%= link_to 'Edit', edit_course_path(course) %>
            </td>
            <td>
                <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<br />
<%= link_to 'New Course', new_course_path %>